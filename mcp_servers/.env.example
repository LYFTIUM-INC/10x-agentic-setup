# Project Configuration
# Copy this file to .env and update with your actual values

# Project root directory (absolute path)
PROJECT_ROOT=/path/to/your/project

# Logging configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR

# Port mappings for Docker deployment
ML_CODE_INTELLIGENCE_PORT=8001
CONTEXT_AWARE_MEMORY_PORT=8002
KNOWLEDGE_GRAPH_PORT=8003
COMMAND_ANALYTICS_PORT=8004
WORKFLOW_OPTIMIZER_PORT=8005

# Model cache directory (optional, defaults to ./models)
MODEL_CACHE_DIR=./models

# Data persistence directory (optional, defaults to ./data)
DATA_DIR=./data

# Memory system configuration
MEMORY_RETENTION_DAYS=30
MEMORY_MAX_SIZE_MB=1000

# ML Model configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
MAX_SEQUENCE_LENGTH=512
BATCH_SIZE=32

# Performance tuning
WORKER_THREADS=4
CACHE_SIZE_MB=500
ENABLE_GPU=false

# Security settings
ENABLE_AUTH=false
API_KEY=  # Leave empty for no authentication

# Development settings
DEBUG_MODE=false
ENABLE_PROFILING=false
HOT_RELOAD=false